{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": ["error", { "code": 100 }]
    },
    "ignorePatterns": [
        "src/serviceWorker.js",
        "build/*"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
