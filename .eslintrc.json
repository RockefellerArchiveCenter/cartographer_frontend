{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "max-len": ["error", { "code": 100 }]
    },
    "ignorePatterns": [
        "src/serviceWorker.js",
        "build/*"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
